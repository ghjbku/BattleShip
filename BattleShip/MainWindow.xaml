<Window x:Class="BattleShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="Black">
        <Label Style="{DynamicResource LabelStyle1}" Content="BATTLESHIPS" FontWeight="Bold" FontSize="48" HorizontalAlignment="Center" Margin="0,50,0,0"/>
        <Button x:Name="Computer" Style="{DynamicResource ButtonStyle1}" Content="Player vs Computer" Margin="0,40,0,0" Click="Computer_Click" HorizontalAlignment="Center"/>
        <Button x:Name="Player" Style="{DynamicResource ButtonStyle1}" Content="Player vs Player" Margin="0,20,0,0" Click="Player_Click" HorizontalAlignment="Center"/>
        <Button x:Name="Highscores" Style="{DynamicResource ButtonStyle1}" Content="Highscores" Margin="0,20,0,0" Click="Highscores_Click" HorizontalAlignment="Center"/>
    </StackPanel>

</Window>
