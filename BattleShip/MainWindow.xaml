<Window x:Class="BattleShip.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:BattleShip"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel Background="Black">
        <Label Content="BATTLESHIPS" FontWeight="Bold" FontSize="48" HorizontalAlignment="Center" Margin="0,50,0,0" Background="{x:Null}" Foreground="Lime"/>
        <Button Style="{DynamicResource ButtonStyle1}" Content="Player vs Computer" HorizontalAlignment="Center" FontSize="24" FontWeight="Normal" Margin="0,40,0,0" Padding="10,4,10,4" Foreground="Lime" Background="{x:Null}" BorderBrush="Lime"/>
        <Button Style="{DynamicResource ButtonStyle1}" Content="Player vs Player" HorizontalAlignment="Center" Margin="0,20,0,0" FontSize="24" Padding="10,4,10,4" BorderBrush="Lime" Background="{x:Null}" Foreground="Lime"/>
        <Button Style="{DynamicResource ButtonStyle1}" Content="Highscores" Margin="0,20,0,0" FontSize="24" HorizontalAlignment="Center" Padding="10,4,10,4" Foreground="Lime" BorderBrush="Lime" Background="{x:Null}"/>
    </StackPanel>

</Window>
